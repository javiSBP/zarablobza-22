---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer/index.jsx';
import Nav from '../components/Nav/index.jsx';
import PostPreview from '../components/PostPreview';

const posts = (await Astro.glob('./post/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate)
	.sort((a, b) => new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf());
---

<html lang="es">

<head>
	<MainHead title="Todas las Noticias | Zarablobza" description="Ãšltimas noticias sobre el Zarablobza." />
	<style lang="scss">
		.grid {
			display: grid;
			grid-gap: 3rem;
		}
	</style>
</head>

<body>
	<Nav />
	<div class="wrapper">
		<h1 class="title mt4 mb4">Noticias</h1>
		<div class="grid">
			{posts.map((post) =>
			<PostPreview post={post} />)}
		</div>
	</div>
	<Footer />
</body>

</html>